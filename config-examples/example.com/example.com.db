$ORIGIN .
$TTL 86400	; 1 day
example.com		IN SOA	ns1.example.com. admin.example.com. (
				2024092401     ; serial
				43200          ; refresh (12 hours)
				180            ; retry (3 minutes)
				1209600        ; expire (2 weeks)
				10800          ; minimum (3 hours)
				)
			NS	ns1.example.com.

$ORIGIN example.com.
